<Window x:Class="Face.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Face"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal">
            <Image Source="Resources/beauty_logo.png" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" Height="70"/>
            <TextBlock VerticalAlignment="Center" Foreground="{StaticResource ColorMain}" FontSize="30">Салон красоты "Мордочка"</TextBlock>
        </StackPanel> 
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BntGuest" HorizontalAlignment="Center" Style="{StaticResource MenuButton}">Пользователь</Button>
            <Button x:Name="Bntuest" HorizontalAlignment="Center" Style="{StaticResource MenuButton}">Гость</Button>
        </StackPanel>
        
    </Grid>
</Window>
    